<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    x:Class="Stockino3.Presentation.TransactionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="using:Stockino3.Presentation.Converters"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <!--  Styly pro podporu tmavého/světlého režimu  -->
    </Page.Resources>

    <Grid>
        <!--  Indikátor trendu  -->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>




        <!--  Moderní navigační hlavička s adaptivním designem  -->
        <Grid
            Background="{StaticResource HeaderBackgroundBrush}"
            Grid.Row="0"
            Height="Auto"
            MinHeight="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Zajistí správné odsazení na různých zařízeních (např. notch na iPhonu)  -->


            <Grid Margin="16,8,16,8" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Zpět tlačítko s efektem při najetí myší  -->
                <Button
                    Background="{StaticResource BackButtonBackgroundBrush}"
                    BorderThickness="0"
                    Click="BackButton_Click"
                    CornerRadius="20"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Padding="12,8"
                    VerticalAlignment="Center">
                    <Button.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Light" />
                                <ResourceDictionary x:Key="Dark" />
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Foreground="{StaticResource BackButtonForegroundBrush}"
                            Glyph="&#xE72B;" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource BackButtonForegroundBrush}"
                            Margin="8,0,0,0"
                            Text="ZPĚT" />
                    </StackPanel>
                </Button>

                <!--  Nadpis stránky - vycentrovaný  -->
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource HeaderForegroundBrush}"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Text="TRANSAKCE"
                    VerticalAlignment="Center" />
            </Grid>
        </Grid>

        <!--  Obsah stránky  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Progress indicator s animací  -->
            <ProgressBar
                Foreground="{ThemeResource SystemAccentColor}"
                Grid.Row="0"
                Height="3"
                IsIndeterminate="True"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                x:Name="LoadingIndicator" />

            <!--  Responzivní kontejner pro obsah  -->
            <Grid Grid.Row="1" Margin="0">
                <!--  Adaptivní padding podle velikosti zařízení  -->
                <Grid.Resources>
                    <ResourceDictionary>
                        <Thickness x:Key="ContentPadding">16,16,16,16</Thickness>
                    </ResourceDictionary>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Hlavní obsah - seznam transakcí  -->
                <Grid Margin="{StaticResource ContentPadding}">
                    <mvux:FeedView Source="{Binding Transactions}">
                        <mvux:FeedView.ValueTemplate>
                            <DataTemplate>
                                <ListView
                                    IsItemClickEnabled="True"
                                    ItemClick="TransactionsListView_ItemClick"
                                    ItemsSource="{Binding Data}"
                                    Padding="0"
                                    SelectionMode="None">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0,4" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{StaticResource TransactionItemBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                HorizontalAlignment="Stretch"
                                                Margin="0,8"
                                                Padding="20,14"
                                                VerticalAlignment="Center">
                                                <Grid>
                                                    <Grid.Resources>
                                                        <converters:ProfitToColorConverter x:Key="ProfitToColorConverter" />
                                                        <converters:ProfitToIconConverter x:Key="ProfitToIconConverter" />
                                                        <converters:ProfitToVisibilityConverter x:Key="ProfitToVisibilityConverter" />
                                                        <Storyboard x:Key="PointerOverAnimation">
                                                            <DoubleAnimation
                                                                Duration="0:0:0.2"
                                                                Storyboard.TargetName="ScaleTransform"
                                                                Storyboard.TargetProperty="ScaleX"
                                                                To="1.01" />
                                                            <DoubleAnimation
                                                                Duration="0:0:0.2"
                                                                Storyboard.TargetName="ScaleTransform"
                                                                Storyboard.TargetProperty="ScaleY"
                                                                To="1.01" />
                                                        </Storyboard>
                                                        <Storyboard x:Key="PointerExitAnimation" x:Name="PointerExitAnimation">
                                                            <DoubleAnimation
                                                                Duration="0:0:0.2"
                                                                Storyboard.TargetName="ScaleTransform"
                                                                Storyboard.TargetProperty="ScaleX"
                                                                To="1.0" />
                                                            <DoubleAnimation
                                                                Duration="0:0:0.2"
                                                                Storyboard.TargetName="ScaleTransform"
                                                                Storyboard.TargetProperty="ScaleY"
                                                                To="1.0" />
                                                        </Storyboard>
                                                    </Grid.Resources>
                                                    <Grid.RenderTransform>
                                                        <ScaleTransform ScaleX="1" ScaleY="1" x:Name="ScaleTransform" />
                                                    </Grid.RenderTransform>


                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <!--  Ikona transakce  -->
                                                        <ColumnDefinition Width="*" />
                                                        <!--  Informace o transakci  -->
                                                        <ColumnDefinition Width="Auto" />
                                                        <!--  Indikátor zisku/ztráty  -->
                                                        <ColumnDefinition Width="Auto" />
                                                        <!--  Částka  -->
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Ikona transakce  -->
                                                    <Border
                                                        Background="{Binding TrendColor}"
                                                        CornerRadius="20"
                                                        Grid.Column="0"
                                                        Height="40"
                                                        Margin="0,0,16,0"
                                                        Width="40"
                                                        x:Name="TrendBorder">
                                                        <TextBlock
                                                            FontSize="22"
                                                            Foreground="{ThemeResource SystemBaseHighColor}"
                                                            HorizontalAlignment="Center"
                                                            Text="{Binding TrendSymbol}"
                                                            VerticalAlignment="Center"
                                                            x:Name="TrendSymbol" />
                                                    </Border>

                                                    <!--  Informace o transakci  -->
                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Margin="0,0,16,0"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="15"
                                                            FontWeight="SemiBold"
                                                            Text="{Binding Description}"
                                                            TextTrimming="CharacterEllipsis" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Margin="0,4,0,0"
                                                            Opacity="0.7"
                                                            Text="{Binding Volume}" />
                                                    </StackPanel>

                                                    <!--  Indikátor zisku/ztráty  -->
                                                    <StackPanel
                                                        Grid.Column="2"
                                                        Margin="0,0,12,0"
                                                        Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding Profit, Converter={StaticResource ProfitToVisibilityConverter}}">
                                                        <!--  Indikátor zisku/ztráty na prvním řádku  -->
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <FontIcon
                                                                FontSize="16"
                                                                Foreground="{Binding Profit, Converter={StaticResource ProfitToColorConverter}}"
                                                                Glyph="{Binding Profit, Converter={StaticResource ProfitToIconConverter}}"
                                                                Margin="0,0,4,0"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Foreground="{Binding Profit, Converter={StaticResource ProfitToColorConverter}}"
                                                                Text="{Binding ProfitPercentage}"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>

                                                        <!--  Částka na druhém řádku  -->
                                                        <TextBlock
                                                            FontSize="16"
                                                            FontWeight="SemiBold"
                                                            HorizontalAlignment="Right"
                                                            Margin="0,4,0,0"
                                                            Text="{Binding TotalAmount}"
                                                            VerticalAlignment="Center" />
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </DataTemplate>
                        </mvux:FeedView.ValueTemplate>

                        <!--  Vylepšený loading indikátor  -->
                        <mvux:FeedView.ProgressTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ProgressRing
                                            Foreground="{ThemeResource SystemAccentColor}"
                                            Height="40"
                                            HorizontalAlignment="Center"
                                            IsActive="True"
                                            VerticalAlignment="Center"
                                            Width="40" />
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="{ThemeResource SystemBaseMediumColor}"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0"
                                            Text="Načítání transakcí..." />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </mvux:FeedView.ProgressTemplate>

                        <!--  Chybový stav  -->
                        <mvux:FeedView.ErrorTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <FontIcon
                                            FontFamily="Segoe Fluent Icons"
                                            FontSize="32"
                                            Foreground="{ThemeResource SystemErrorTextColor}"
                                            Glyph="&#xE783;"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,16" />
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            HorizontalAlignment="Center"
                                            Text="Nepodařilo se načíst transakce" />
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="{ThemeResource SystemBaseMediumColor}"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0"
                                            Text="Načítání transakcí..." />

                                        <Button
                                            Background="{ThemeResource SystemAccentColor}"
                                            Content="Zkusit znovu"
                                            CornerRadius="4"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            Padding="16,8" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </mvux:FeedView.ErrorTemplate>

                        <!--  Prázdný stav  -->
                        <mvux:FeedView.NoneTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <FontIcon
                                            FontFamily="Segoe Fluent Icons"
                                            FontSize="48"
                                            Glyph="&#xE9CE;"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,16"
                                            Opacity="0.5" />
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            HorizontalAlignment="Center"
                                            Text="Žádné transakce nenalezeny" />
                                        <TextBlock
                                            FontSize="14"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0"
                                            MaxWidth="300"
                                            Opacity="0.7"
                                            Text="Vytvořte novou transakci pomocí tlačítka níže"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </mvux:FeedView.NoneTemplate>
                    </mvux:FeedView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
